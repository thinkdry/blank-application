<%h content_for :title, "#{current_container.class.to_s}: " + current_container.title %>

<div class="workspaceHeader">
    <div class="workspaceLogo">
        <%#= link_to image_tag(current_container.logo.url(:medium), :width => "150"), admin_workspace_path(current_container) %>
    </div>
    <div class="workspaceInfos">

        <h2><%=  @current_object.title %></h2>
        <div class="workspaceActions">
            <% if @current_object.has_permission_for?('edit', @current_user) %>
                <%= link_to I18n.t('general.link.edit'), edit_admin_workspace_path(current_container.id)  %>&nbsp;|
            <% end %>
            <% if @current_object.has_permission_for?('contacts_management', @current_user) %>
                <%= link_to ( I18n.t('workspace.show.manage_contacts'),
                    list_admin_workspace_workspace_contacts_path(current_container.id))%>&nbsp;|
            <% end %>
            <% if ContactsWorkspace.exists?(:workspace_id => @current_object.id,
                    :contactable_type => 'User',
                    :contactable_id => @current_user.id) %>
                <%= link_to (I18n.t('workspace.show.unsubscribe_to_newsletter'),
                    subscribe_admin_workspace_workspace_contacts_path(@workspace.id)+'?remove=yes')%>&nbsp;|
            <% else %>
                <%= link_to(I18n.t('workspace.show.subscribe_to_newsletter'),
                    subscribe_admin_workspace_workspace_contacts_path(current_container.id))%>&nbsp;|
            <% end %>
            <% if UsersContainer.exists?(:user_id => @current_user.id, :containerable_id => current_container.id, :containerable_type => current_container.class.to_s) %>
                <%= link_to(I18n.t('workspace.show.leave_workspace'),
                    unsubscription_admin_workspace_path(current_container.id)) %>&nbsp;|
            <% elsif @current_object.state == 'Public' %>
                <%= link_to(I18n.t('workspace.show.join_workspace'),
                    subscription_admin_workspace_path(current_container.id)) %>&nbsp;|
            <% end %>
        </div>

        <div class="description"><%= @current_object.description %></div>

        <% if @current_object.state == 'Public' || @current_object.state == 'mi_public' %>
            <br />
            <h2><%= I18n.t('workspace.show.request_to_workspace_administrator')%> </h2>
            <%= I18n.t('workspace.show.request_to_workspace_administrator_txt1')%>.<br />
            <% form_for :question, :url => question_admin_workspace_path(current_container.id) do |f| %>
                <%= f.select :type, [I18n.t('workspace.show.request_to_workspace_administrator_option1'), I18n.t('workspace.show.request_to_workspace_administrator_option2')] %><br />
                <%= f.text_area :msg, :size => '50x5' %><br />
                <%= f.submit I18n.t('general.button.send_request') %><br />
            <% end %>
        <% end %>
    </div>
</div>


<%= render  :partial => 'admin/blank_lists/display_item_list' %>