<% f.field :keywords, :label => I18n.t('item.field.keyword_label').pluralize + " :" do %>
  <div id="add_keyword">
    <%= text_field :keyword, :value, :hint => I18n.t('item.field.keyword_hint'), :onclick => "autocomplete_on(#{@keywords},'#keyword_value')"%>
    <%= button_to_function(I18n.t('item.field.add_keyword'),
      "insert_keyword('#{object.class.to_s.underscore}', '#keywords_list', 'keywords_field');",
      :class => 'smallSubmit leftAlign') %>
  </div>
  <div id="keywords_list">
    <% object.keywords.each do |k| %>
      <div id="<%= k.name+"_000" %>" class="keyword_label"><%= k.name+' '+link_to_function(image_tag('/images/icons/delete.png', :width => "15"), "$('##{k.name}_000').remove()") %><%= hidden_field_tag "#{object.class.to_s.underscore}[keywords_field][]", k.name %></div>
    <% end %>
  </div>
<% end %>
