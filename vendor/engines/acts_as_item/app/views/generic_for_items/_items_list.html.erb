<% if @paginated_objects.first %>

  <script type="text/javascript" src="/videoplayer/swfobject.js"></script>
  <%= display_classify_bar(['created_at', 'comments_number', 'viewed_number', 'rates_average', 'title'], ajax_url, 'object-list') %>
  <div id="content">
    <input type="hidden" id="total_items" value="<%= @paginated_objects.length %>">
    <%= display_item_in_list(@paginated_objects) %>
  </div>

  <%#= will_paginate @paginated_objects %>
  <%= remote_pagination(@paginated_objects, ajax_url,  'object-list') %>

  <div class="other_output_format">
    <%= I18n.t('item.show.get_in_another_format')%>:
    <% if params[:controller] != 'searches' %>
      <%= link_to_function image_tag('/images/icons/xml.png'), "params('#{content_path(:item_type => params[:item_type])}','#{current_workspace.nil? ? "format=xml" : "workspace_id=#{current_workspace.id}&format=xml"}')" %>
      <%= link_to_function image_tag('/images/icons/json.png'), "params('#{content_path(:item_type => params[:item_type])}','#{current_workspace.nil? ? "format=json" : "workspace_id=#{current_workspace.id}&format=json"}')" %>
      <%= link_to_function image_tag('/images/icons/atom.png'), "params('#{content_path(:item_type => params[:item_type])}','#{current_workspace.nil? ? "format=atom" : "workspace_id=#{current_workspace.id}&format=atom"}')" %>
    <% else %>
        <%= link_to image_tag('/images/icons/xml.png'), "#{request.url}&format=xml" %>
      <%= link_to image_tag('/images/icons/json.png'), "#{request.url}&format=json" %>
      <%= link_to image_tag('/images/icons/atom.png'), "#{request.url}&format=atom" %>
    <% end %>
  </div>

<% else %>

  <br /><br /><%= I18n.t('item.common_word.list_empty') %><br /><br />

<% end %>