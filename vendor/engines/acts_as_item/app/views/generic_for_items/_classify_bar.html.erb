<div id="classify_bar">
	<%# if params[:controller] != 'searches' &&  params[:controller] != 'groups'&& (current_workspace ? @current_user.has_workspace_permission(current_workspace.id, params[:item_type], 'new') : @current_user.has_system_permission(params[:item_type], 'new')) %>
    	<%#= image_tag "/images/icons/add.png", :width => "30"%>
        <%#= link_to I18n.t('layout.application.add_content'), new_item_path(params[:item_type].downcase.singularize)%>
	<%# end %>
	<img src="/images/icons/filter.png" width="20"/>
    <% ordering_fields_list.each do |filter| %>
      <%= I18n.t('layout.search.filter_'+filter) %>
	  <% if (params[:by].split('-') == filter && params[:by].split('-') == 'asc') -%>
	    <%= image_tag('/images/icons/asc_selected.png', :width => '10') %>
	  <% else -%>
      	<%= link_to_function image_tag('/images/icons/asc.png', :width => '10'),
			 "new Ajax.Updater('#{refreshed_div}', '#{safe_url(ajax_url, ["by=#{filter}-asc"])}', {method:'get', asynchronous:true, evalScripts:true})" %>
	  <% end -%>
	  <% if (params[:by].split('-') == filter && params[:by].split('-') == 'desc') -%>
	  	<%= image_tag('/images/icons/desc_selected.png', :width => '10')%>
	  <% else -%>
        <%= link_to_function image_tag('/images/icons/desc.png', :width => '10'),
              "new Ajax.Updater('#{refreshed_div}', '#{safe_url(ajax_url, ["by=#{filter}-desc"])}', {method:'get', asynchronous:true, evalScripts:true})" %>
	  <% end -%>
    <% end %>
</div>