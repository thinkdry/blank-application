<div id="content_show">
  <h1>
    <%= link_to image_tag("/images/icons/left.png"), (current_workspace ? workspace_path(current_workspace.id)+'?item_type=' : '/content/')+object.class.to_s.underscore.pluralize %>
    <%= image_tag object.icon %>
    <%= object.title %>
  </h1>
  <div class="file_infos">
    <div class="file_infos_box">
      <p><%= link_to_user object.user %></p>
      <p><%= I18n.l object.created_at, :format =>:long %></p>
      <p><%= object.comments_number %> <%= object.comments_number > 1 ? I18n.t("item.common_word.comment").pluralize : I18n.t("item.common_word.comment")%></p>
      <p><%= item_rate_locked(object) %></p>
      <p>
        <%= I18n.t("item.show.associated_workspace") %><br/>
        <% for ws in object.workspaces -%>
          <%= link_to ws.title, workspace_path(ws) %><br/>
        <% end -%>
      </p>
    </div>
    <div class="file_infos_box">
      <%= image_tag '/images/icons/tag_blue.png', :align => "left"%><%= keywords_links_list_for(@current_object) %>
    </div>
    <div class="file_infos_box">
      <div align="right">
        <% if @current_object.has_permission_for?('rate', @current_user) %>
          <%= link_to image_tag('icons/rate.png'), '#', :id => :rate_action %>
          <div id="item_rate_modal_content" style="float:left;" align="center">
            <%= item_rate(object) %>
          </div>
          <script type="text/javascript" charset="utf-8">
            content = $('item_rate_modal_content').remove().innerHTML;
            new Tip($('rate_action'), content, {
              showOn: 'click',
              hook: { target: 'rightMiddle', tip: 'topLeft' },
              hideOn: { element: 'tip', event: 'mouseout' },
              hideAfter: 1,
              width: 100
            });
          </script>
        <% end %>
        <% if @current_object.has_permission_for?('comment', @current_user) %>
          <%= link_to image_tag('icons/comments.png'), '#new_comment_form_box' %>
        <% end %>
        <%= link_to image_tag('icons/printer.png'), 'javascript:window.print();' %>
        <% if @current_object.has_permission_for?('edit', @current_user)  %>
          <%= link_to image_tag('icons/pencil.png'), edit_item_path(object)%>
        <% end %>
        <% if @current_object.has_permission_for?('destroy', @current_user) %>
          <%= link_to image_tag('icons/delete.png'), item_path(object), :method => :delete, :confirm =>  I18n.t('item.destroy.delete_conform')%>
        <% end %>
      </div>
      <div class="output_format">
        <%=I18n.t('item.common_word.output_formate') %>:
        <%= link_to image_tag('/images/icons/xml.png'), item_path(object)+".xml", :class => 'output_format_link' %>
        <%= link_to image_tag('/images/icons/json.png'), item_path(object)+".json", :class => 'output_format_link' %>
      </div>
      <% if object.has_permission_for?('comment', @current_user) %>
      <div class="add_item_type">
        <p><%= image_tag "/images/icons/add.png", :width => "30"%><a href="<%=  new_item_path(object.class.to_s)%>"><%= I18n.t('layout.application.add_content')%></a></p>
      </div>
      <% end %>
    </div>
  </div>
  <div class="item_description"><%= object.description %></div>

  <%= capture(&block) %>

  <%= print_comments_part(object) %>

</div>
