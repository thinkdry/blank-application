<body onload="initialize()">
<div id="page">
	<div id="header">
		<div id="logo">
			<%= image_tag 'logo.gif', :width => '400', :height => '80' %>
		</div>
		<div id="header_right">
			<div id="main_links">
				Bienvenue <%= @current_user.firstname.capitalize %> | <%= link_to 'Mon compte', user_path(current_user) %> | <%= link_to 'Administration', admin_path %>  | <%= link_to 'Se déconnecter', '/logout' %>
			</div>
			<div id="MenuHR">
				<ul>
					<li>
						<%= link_to 'Accueil', '/' %>
					</li>
					<li>
						<%= link_to 'Contenu', '/items' %>
					</li>
					<li>
						<%= link_to 'Rechercher', new_search_path %>
					</li>
				</ul>
				<div id="slct_WS">
					<select name="slct_WS">
						<option>
							Espace de travail
						</option>
						<option>
							----------
						</option>
						<% @current_user.all_workspaces.each do |w|
							concat\
								content_tag(:option, w.name, :onclick => "document.location.href = '#{workspace_path(w)}'"),
								binding
						end %>
						<option>
							----------
						</option>
						<option onclick="document.location.href='/items'">
							Tout le contenu
						</option>
						<option>
							----------
						</option>
						<option onclick="document.location.href='<%= new_workspace_path %>'">
							Nouvel espace de travail
						</option>
					</select>
				</div>
			</div>
		</div>
	</div>
	<div id="container">
	  <div id="middle-right">
      <h3>Ajouter un fichier</h3>
      <form name="form1" method="post" action="" id="form1">
				<select name="slct_filtre" id="slct_filtre" onchange="document.location.href = this.value">
					<option selected value='#'>
						--------
					</option>
					<option value="<%= new_item_path(Article) %>">
						Un article
					</option>
					<option value="<%= new_item_path(Image) %>">
						Une image
					</option>
					<option value="<%= new_item_path(Audio) %>">
						Fichier Audio
					</option>
					<option value="<%= new_item_path(Video) %>">
						Fichier Vidéo
					</option>
					<option value="<%= new_item_path(ArticFile) %>">
						Fichier
					</option>
					<option value="">
						Une publication
					</option>
				</select>
			</form>
    </div>
	  <div id="middle-middle">
	    <div class="fuck-ie">
  	    <div id="search-bar-container">
    	    <div id="search-bar-left"></div>
    	    <div id="search-bar-middle">
            <% form_tag search_path, :method => :get, :name => "search" do -%>
    		      <%= text_field_tag :search, "Rechercher", :class => "style_text" %>
    		      <p>dans</p> 
    		      <%= select_tag "search_in", "<option>tous les éléments de cet espace</opttion>"%>
    		      <%= link_to(image_tag("search_button.gif"), "javascript:void(1);", :onclick => "document.search.submit();", :class => "search_button") %>
    	      <% end -%>
      	  </div>
      	  <div id="search-bar-right"></div>
      	  <div class="clear"></div>
    	  </div>
  	  </div>
		  <%= content_tag(:div, flash[:notice], :class => 'notice') if flash[:notice] %>
      <%= content_tag(:div, flash[:error], :class => 'error') if flash[:error] %>
		  <%= yield %>
      <div id="spinner" style="display:none;">
        <center>
          <%= image_tag 'spinner.gif', :width => '40', :height => '15' %>
          <br><b>L O A D I N G</b>
        </center>
      </div>
    </div>
    <div id="footer">
      2008 - Artic Institut
    </div>
	</div>
	
</div>


</body>
</html>