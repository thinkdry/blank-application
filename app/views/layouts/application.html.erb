<html>
	<head>
		<%= stylesheet_link_tag "application.css" %>
		<%= javascript_include_tag :all %>
	</head>

	<body onload="initialize()">

		<div id="user_bar">
			<%= render :partial => "users/user_bar" %>
		</div>

		<div id="menu_up">
			<%= link_to image_tag('artic.png'), '/' %>
			<%= link_to 'Mon Compte', :controller => :account %>
			|
			Contenu :	<%= link_to 'Tout', :controller => 'items' %>,
						<%
							current_user.workspaces.each do |workspace|
								out = link_to(workspace.name, workspace_url(workspace.id)) + ', '
								out = content_tag(:strong, out) if (@workspace == workspace)
								concat(out, binding)
							end
						%>
						<%= link_to 'Nouvel espace', new_workspace_url %>
			|
			Recherche
			<% permit 'admin' do %>
				|
				<%= link_to 'Administration', :controller => :admin %>
			<% end %>
		</div>

		<% if session && session[:menu] %>
			<div id="menu_right">
				<%= render :partial => "#{session[:menu]}/menu" %>
			</div>
		<% end %>

		<%= content_tag(:div, flash[:notice], :class => 'notice') if flash[:notice] %>

		<%= yield %>

	</body>
</html>