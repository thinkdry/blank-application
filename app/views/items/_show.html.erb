<div id="content_show">
	<h1>
		<%= image_tag object.icon %>
		<%= object.title %>
	</h1>
	<div class="undertitle">
		par <%= link_to_user object.user %>
		le <%= object.created_at.l(:long) %> -
		<%= object.comments.size %> commentaires - Note : 
	</div>
	<%= item_rate_locked(object) %>

	<div class="tags">
		<%= image_tag 'tag_blue.png' %> Tags : <%= tag_list(object.tags) %>
	</div>
	


	<%# FIXME: (integration) Its not an info box but an action box %>
	<div class="file_infos_box">
		
		<%= image_tag 'icons/award_star_gold_1.png' %>
		<%= link_to 'Noter', '#', :id => :rate_action %>
		<div id="item_rate_modal_content">
			<%= item_rate(object) %>
		</div>
		<script type="text/javascript" charset="utf-8">
			content = $('item_rate_modal_content').remove().innerHTML;
			new Tip($('rate_action'), content, {
				showOn: 'click',
				stem: 'topLeft',
				hook: { target: 'rightMiddle', tip: 'topLeft' },
				hideOn: false,
				hideAfter: 2,
				width: 100
			});
		</script>
		
		<%= image_tag 'icons/comments.png' %>
		<%= link_to 'Commenter', '#new_comment_form_box' %>
		
		<%= image_tag 'icons/printer.png' %>
		<%= link_to 'Imprimer', 'javascript:window.print();' %>
		
		<% if permit? 'edition of current_object' %>
			<%= image_tag 'icons/pencil.png' %>
			<%= link_to 'Editer', edit_item_path(object)%>
		<% end %>
		
		<% if permit? 'deletion of current_object' %>
			<%= image_tag 'icons/delete.png' %>
			<%= link_to 'Supprimer', item_path(object), :method => :delete,
			 		:confirm => "Êtes vous sûr de vouloir supprimer cet item ?\nL'action est irréversible." %>
		<% end %>
		
	</div>
	
	<h2>Résumé</h2>
	<%= object.description %>
	
	<%= capture(&block) %>
	
	<div id="comment_list">
		<%= image_tag 'icons/comments.png' %>
		<h2 id="comments">Commentaires</h2>
		<table width="610px">
			<%= render :partial => "items/comment", :collection => object.comments %>
		</table>
	</div>
	
	<fieldset id="new_comment_form_box" class="myform"> 
		<p>Votre commentaire</p>
		<% remote_form_for Comment.new, :url => comment_item_path(@current_object), :loading => "$('comment_box').writeAttribute('disabled')", :complete => "$('comment_box').writeAttribute('disabled', false);$('comment_box').value = ''" do |f| %>
			<%= f.text_area :text, :size => "90x8",:class => :comment_box, :id => :comment_box %>
			<br>
		  	<div class="buttons">
		      <button type="submit" class="positive alone"><img src="/images/tick.png" alt=""/>Publier mon commentaire</button>
		    </div>
		<% end %>
	</fieldset>

</div>
