<fieldset>
  <legend><%= title %></legend>
  <% form_for @current_object, :builder => BlankFormBuilder, :html => {:multipart => true} do |f| -%>
    
    <% is_copyright = (@current_object.state == 'copyright') ? true : false %>
    <% if is_copyright %>
    <%= f.hidden_field :state, :value => 'copyright' %>
      <%=I18n.t('message.copyright_restriction')%><br />
    <% end %>
    
    <%= f.text_field :title, :label => I18n.t('item.title') + " :", :readonly => is_copyright %>
    
    <%= f.tags_field :string_tags, :label => I18n.t('general.tag').pluralize + " :", :hint => I18n.t('general.separated_by_spaces') %>

    <%= f.text_field :description, :label => I18n.t('item.description') + ' :', :readonly => is_copyright %>
        
    <%= capture(f, &block) %>

    <% f.field :workspaces, :label => I18n.t('general.workspace') +' :' do %>
      <%= item_status_fields(f, @current_object) %>
      <%= error_message_on :current_object, :items %>
    <% end %>

    <%= f.submit current_object.new_record? ? I18n.t('general.create') : I18n.t('general.update') %>
	
  <% end -%>
</fieldset>