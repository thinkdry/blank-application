<% div_for item_in_list do %>
  <div class="item-list">
	
    <%= link_to object.title, item_path(object), :class => 'object' %>
	<% if object.workspaces.size > 0 %>
		dans <%= links_to_workspace_collection object.workspaces %>
	<% end %>
	par <%= link_to_user item_in_list.user %>
	le <%= object.created_at.l(:long) %>
	
    <div style="float:left"><%= object.comments.count %> commentaires - Note : </div>
    <div style="float:left" id="rating_<%= item_in_list.class.to_s.underscore %>_<%= item_in_list.id %>" style="width:85px;"></div>
    <div class="clear"></div>
  </div>
	<script type="text/javascript" charset="utf-8">
		new Starbox("rating_<%= item_in_list.class.to_s.underscore %>_<%= item_in_list.id %>", <%= item_in_list.rating %>, { locked: true });	
	</script>	
<% end %>
