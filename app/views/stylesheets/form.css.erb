fieldset p{
  font-size:11px;
  font-weight: bold;
  margin-bottom:10px;
  padding-bottom:10px;
  clear:both;
}

fieldset label, .fieldsetSimulation label{
	padding-top:13px;
	text-align:right;
	vertical-align:top;
	width:180px;
	font-weight:bold;
    margin-right: 10px;
	float:left;
	clear:both;
}

fieldset legend{
	background:#FAFAFA none repeat scroll 0 0;
	border:1px solid #C2C2C2;
	font-size:200%;
	margin-bottom:15px;
	margin-left:10px;
	padding:5px;
}

fieldset legend img{ 
	margin-right:5px;
}

fieldset .hint{
  display:block;
  font-size:11px;
  font-weight:normal;
  text-align:right;
  width:100%;
}

fieldset input, fieldset textarea, .fieldsetSimulation input, .fieldsetSimulation textarea{
	border:1px solid #c2c2c2;
	width:90%;
	font-size:15px;
}

.formElement{
	float:left;
	width:70%;
	margin-top:10px;
}

.spacer{clear:both; height:1px;}

fieldset{
	background-color: #EEEEEE;
	padding: 1em;
	border: 1px solid #C2C2C2;
	margin:0;
	color:#666;
}

/* BUTTONS */
.user label{
  clear: left;
  width: 200px;
  text-align: right;
  padding-right: 10px;
  margin-top: 5px;
  color: #7B003B;
  float: left;
}

.user select{
  width: 150px;
  float: left;
  margin-top: 5px;
} 

.user a{
  float: left;
  margin-top: 5px;
  margin-left: 10px;
}

.submit_button{
	background:transparent url(/images/button.png) no-repeat scroll 0 20px;
	border:medium none;
	clear:both;
	color:#FFFFFF;
	display:block;
	font-weight:bold;
	height:auto;
	margin:0 auto;
	overflow:visible;
	padding:30px;
	width:250px;
	font-size:90%;
}

.smallSubmit{
	background:transparent url('/images/smallButton.png') no-repeat;
	border:none;
	clear:both;
	color:#fff;
	text-align:center;
	width:125px;
	height:20px;
	font-size:80%;
	margin-top:15px;
}

.smallSubmitContainer{
	width:125px;
	margin:0 auto;
	clear:both;
}


.centerButton{
	width:100%;
}

.checkBoxElement{
	width:auto;
	border:0;	
}

.ajax_hint_message{
	margin-left:10px;
}
.formElement img {
	margin:10px 0;
}
.dateSelection .formElement img{
	margin:0;
}
form br{
	clear:both;
}

#keyword_value{
	width:315px;
	float:left;
}

.leftAlign{
	margin-top:1px;
	margin-left:20px;
}
.dateSelection{
	clear:both;
	overflow:hidden;
}
#search_filter_name{
	height:auto !important;
	font-size:95% !important;
	margin:0 !important;
}

.advancedEditor{
	margin:0 auto;
}

#send_newsletter{
	float:left;
	width:50%;
}

#send_newsletter .formElement{
	width:auto;
	margin-top:15px;
}

#send_newsletter h2{
	margin-top:15px;
}

#sent_to{
	width:50%;
	float:left;
}

.sendLeftButton {
	border:0;
	background:transparent url('/images/icons/left.png') no-repeat;
}
.sendRightButton{
	border:0;
	background:transparent url('/images/icons/right.png') no-repeat;
}