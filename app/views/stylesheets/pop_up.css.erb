
body {
	font-family:"Lucida Grande", "Bitstream Vera Sans", Helvetica, Verdana, Arial, sans-serif;
	margin: 0px;
	padding: 0px;
	font-size: 10pt;
	color: #333333;
	background-color: #eee;
	text-align: center;
}

a:hover {
  color: #dbdbdb;
	text-decoration: underline;
}
a:active {
  color: #9c9c9c;
	text-decoration: none;
}

a:link {
	color:#9c9c9c;
	text-decoration: none;
}
a:visited {
  color:#9c9c9c;
  text-decoration: none;
}

a.add_item{
	display: block;
	margin-top: 30px;
}

.clear{
  clear: both;
}

#page {
	width: 600px;
	margin: 0 auto;
	background-color:#ffffff;
	padding:20px 0 5px 0;
}

img{
	border:0;
	margin:0;
}

.article, .image{
	border-bottom:1px solid #EEEEEE;
	margin-left:15px;
	margin-right:15px;
	margin-top:10px;
	padding-bottom:5px;
	text-align:left;
}
.pagination {
	margin:30px 0;
	text-align:center;
}

h3{
	color:#F79646;
	font-size:97%;
	margin-top:10px;
	padding-bottom:4px;
}