<fieldset>
  <legend>Recherche avancée</legend>
  <% form_for :search, :url => search_path, :builder => ArticFormBuilder, :html => {:method => :get} do |f| %>
  
    <p>Informations au sujet de l'élément recherché</p>
    
    <%= f.text_field :title_contains, :label => 'Titre' %>
    
    <%# OPTIMIZE: Use lib with user friendly multiple select %>
    <%= f.select  :item_type_equals,
                  %W(Article Image Video Audio Publication CmsFile),
                  :label => 'Type' %>

    <%= f.text_field :user_name_contains, :label => 'Auteur' %>
    <div id="autocomplete_choices" class="autocomplete"></div>
    <script type="text/javascript">
      new Ajax.Autocompleter("search_user_name_contains", "autocomplete_choices", "/users/index",{
        method: 'post', paramName: 'login'
      });
    </script>
    
    
    <% f.field :date, :label => 'Période de recherche' do %>
      Du <%= f.calendar_date_select :created_after, :class => "advanced" %> <br>
      Au <%= f.calendar_date_select :created_before, :class => "advanced" %>
    <% end %>
    
  	<div class="buttons">
      <button type="submit" class="positive alone"><img src="/images/tick.png" alt=""/>Rechercher</button>
    </div>
    
	<% end %>
</fieldset>