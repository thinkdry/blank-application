<a href="#" id="items_link" class="blok" onclick="Effect.SlideDown('items'); if($('publications').visible()) Effect.SlideUp('publications'); if($('users').visible()) Effect.SlideUp('users'); if($('workspaces').visible()) Effect.SlideUp('workspaces'); return false;"><%=I18n.t('home.index.latest_activity')%></a>
<div id="items" style="display:none; width:600px;">
  <div class="lift_items">
    <% @latest_items.each do |l|%>
		<p>
			<%= image_tag l.icon %>
         	<%= link_to_item l %>
			<% if l.workspaces.size > 0 %>
				<%= I18n.t('general.common_word.in') %> <%= links_to_workspace_collection l.workspaces %>
			<% end %>
         	<%= I18n.t('general.common_word.on1') %> <%= I18n.l l.created_at, :format => :long %>
			<%= I18n.t('general.common_word.by') %> <%= link_to_user(l.user) %>
		</p>
    <%end%>
  </div>
</div>
<a href="#" id="users_link" class="blok" onclick="Effect.SlideDown('users');if($('publications').visible()) Effect.SlideUp('publications'); if($('items').visible()) Effect.SlideUp('items'); if($('workspaces').visible()) Effect.SlideUp('workspaces'); return false;"><%=I18n.t('home.index.latest_user')%></a>
<div id="users" style="display:none; width:600px;">
  <div class="lift_items">
    <%@latest_users.each do |u|%>
		<p>
			<%= image_tag 'icons/user_red.png' %>
        	<%=	link_to_user(u) %>
			<%= I18n.t('general.common_word.on1') %> <%= I18n.l u.created_at, :format => :long %>
		</p>
    <%end%>
  </div>
</div>

<a href="#" id="ws_link" class="blok" onclick="Effect.SlideDown('workspaces'); if($('publications').visible()) Effect.SlideUp('publications'); if($('users').visible()) Effect.SlideUp('users'); if($('items').visible()) Effect.SlideUp('items'); return false;"><%=I18n.t('home.index.latest_workspace')%></a>
<div id="workspaces" style="display:none; width:600px">
  <div class="lift_items">
     <%@latest_ws.each do |ws|%>
		<p>
			<%= image_tag 'icons/folder_go.png' %>
     		<%= link_to_workspace(ws) %>
			<%= I18n.t('general.common_word.on1') %> <%= I18n.l ws.created_at, :format => :long %>
		</p>
     <%end%> 
  </div>
</div>

<a href="#" id="pubs_link" class="blok" onclick="Effect.SlideDown('publications'); if($('items').visible()) Effect.SlideUp('items'); if($('users').visible()) Effect.SlideUp('users'); if($('workspaces').visible()) Effect.SlideUp('workspaces'); return false;"><%=I18n.t('home.index.latest_feed')%></a>
<div id="publications" style="display:none; width:600px;">
  <div class="lift_items">
    <%@latest_feeds.each do |pm|%>
		<p>
			<%= image_tag 'icons/rss.png' %>
			<%= link_to pm.feed_source.title, feed_source_path(pm.feed_source) %> :
        	<%= pm.title[0..50] + (pm.title.size > 50 ? '...' : '' ) %>
			<%= I18n.t('general.common_word.on1') %> <%= I18n.l pm.created_at, :format => :long %>
		</p>
    <%end%>
  </div>
</div>