      <%= checkboxes_from_list(LANGUAGES, "languages", @conf, "sa_") %>

      Workspaces types :<br />
      <%= checkboxes_from_list(WS_TYPES, "ws_types", @conf, "sa_") %>

      Item categories :<br />
      <%= checkboxes_from_list(ITEM_CATEGORIES, "item_categories", @conf, "sa_") %>

